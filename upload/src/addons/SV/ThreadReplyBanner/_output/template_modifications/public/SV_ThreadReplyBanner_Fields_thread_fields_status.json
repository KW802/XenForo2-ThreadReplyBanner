{
    "template": "helper_thread_options",
    "description": "Edit thread reply banner from editing a thread",
    "execution_order": 10,
    "enabled": true,
    "action": "preg_replace",
    "find": "/(<xf:macro name=\"thread_status\".*)(<\\/xf:macro>)/s",
    "replace": "$1\n<xf:include template=\"SV_ThreadReplyBanner_Fields\" />\n$2"
}